#data-content{
    position: absolute;
    top: 0;
    bottom: 0;
    /* left: 300px; */
    left: 14%;
    right: 0;
    overflow: hidden;
}

#data-content .toolbar{
    height: 40px;
    line-height: 62px;
    white-space: nowrap;
    position: relative;
}

#data-content .toolbar .pull-down-list{
    display: inline-block;
}

#data-content .toolbar .btn{
    position: absolute;
    top: 14px;
    right: 50px;
    width: 84px;
    height: 26px;
    line-height: 26px;
}

#new-sheet, #to-do-sheet, #maintenance{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.data-box{
    position: absolute;
    top: 50px;
    left: 20px;
    right: 20px;
    bottom: 10px;
    overflow: hidden;
}

#create-sheet-div, #modify-status, #record{
    position: absolute;
    width: 620px;
    border: 1px solid rgb(83, 187, 235);
    background: rgba(0, 0, 0, 0.9);
    z-index: 99;
    opacity: 0;
}

#modify-status{
    width: 500px;
}

#record{
    width: 1200px;
    opacity: 1;
    display: none;
}

#create-sheet-div .title, 
#modify-status .title, 
#record .title{
    background: rgb(83, 187, 235);
    margin-top: 0;
    height: 30px;
    line-height: 30px;
    border-bottom: 1px solid rgb(83, 187, 235);
    text-indent: 10px;
    color: #000;
    font-weight: bold;
}

#create-sheet-div .title i, 
#modify-status .title i, 
#record .title i{
    position: absolute;
    top: 8px;
    right: 8px;
    cursor: pointer;
}

#create-sheet-div .title i:hover, 
#modify-status .title i:hover, 
#record .title i:hover{
    color: #333;
}

#modify-status input,
#create-sheet-div input, 
#record input{
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    height: 24px;
    line-height: 24px;
}

#create-sheet-div .basic-info{
    position: absolute;
    height: 200px;
    left: 20px;
    right: 20px;
    top: 50px;
    background: rgba(255, 255, 255, 0.1);
}

#create-sheet-div p{
    margin: 0;
    height: 40px;
    line-height: 40px;
    text-indent: 20px;
}

#create-sheet-div .sheet-info{
    position: relative;
    margin-top: 240px;
}

#modify-status > div:first-of-type,
#modify-status > div:last-of-type{
    margin-top: 30px;
}

#create-sheet-div .btn,
#modify-status .btn, 
#record .btn{
    width: 80px;
    height: 26px;
    line-height: 26px;
    position: relative;
    bottom: 20px;
    margin-left: 270px;
    margin-top: 30px;
    margin-bottom: 20px;
}

#modify-status .btn{
    margin: 60px 0 0 210px;
}

#modify-status > div{
    margin: 50px 0 0 20px;
}

#modify-des{
    width: 360px;
    height: 120px;
    vertical-align: top;
    outline: none;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #fff;
    font-family: 'Microsoft YaHei', 'Arial', '宋体', sans-serif;
    resize: none;
    margin-left: 6px;
}

#modify-status label{
    width: 60px;
    text-align: right;
    display: inline-block;
}

#record .record-box{
    position: relative;
    margin: 20px;
    height: 260px;
    background: rgba(255, 255, 255, 0.1)
}

#create-sheet-div .sheet-info .system-defined{
    height: 80px;
    position: relative;
}

#create-sheet-div .sheet-info .term{
    position: absolute;
    margin-top: 40px;
    width: 280px;
}

#create-sheet-div .sheet-info .term i{
    margin-left: -36px;
}

#term{
    margin-left: 10px;
}

#create-sheet-div .sheet-info .sheet-des{
    position: absolute;
    left: 300px;
    margin-top: -10px;
}

#sheet-des{
    vertical-align: top;
    margin-left: 10px;
    margin-top: 10px;
    width: 200px;
    height: 68px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    resize: none;
    outline: none;
    color: #fff;
    overflow: hidden;
    font-family: 'Microsoft YaHei', 'Arial', '宋体', sans-serif;
}

#create-sheet-div input.error, 
#modify-status input.error,
#sheet-des.error, 
#modify-des.error{
    border-color: red;
}

#term1{
    margin-left: 10px;
}

#modify-status .fa-calendar{
    margin-left: -20px;
}

@media screen and (max-width: 1600px){
    /* #data-content{
        left: 280px;
    } */

    #type-list{
        margin-left: 118px;
    }
}